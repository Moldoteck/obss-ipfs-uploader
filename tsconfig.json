{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "noEmitOnError": true,
    "module": "ES2020",
    "target": "ES2020",
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["ES2020", "ES2020.Promise", "ES2020.String", "ES2020.BigInt", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
